@model IEnumerable<PugliaMia.Models.Spedizioni>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid bgChisiamo9">
    <div class="container hero">
        <div class="row pt-5">
            <div class="text-center lh-4">
                <h1 class="text-white fw-bold titShop dancing">Un mare di sapori</h1>
            </div>
        </div>
    </div>
</div>

<div class="container py-3">
    <h2 class="titPage">Spedizioni</h2>
    <hr class="border border-danger border-2 opacity-50 mb-4" />

    <p>  @Html.ActionLink("Torna indietro", "BackOffice", "Home", new { area = "" }, new { @class = "bottone1" })</p>
    <table class="table table-success table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ordini.StatoOrdine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IndirizzoSpedizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Corriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataSpedizione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroTracciamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatoSpedizione)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ordini.StatoOrdine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IndirizzoSpedizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Corriere)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataSpedizione)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroTracciamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatoSpedizione)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SpedizioneID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SpedizioneID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SpedizioneID }, new { @class = "btn btn-danger" })                  
                </td>
            </tr>
        }

    </table>

    
    </div>
