@model IEnumerable<PugliaMia.Models.Ordini>

<div class="container-fluid bgChisiamo9">
    <div class="container hero">
        <div class="row pt-5">
            <div class="text-center lh-4">
                <h1 class="text-white fw-bold titShop dancing">Un mare di sapori</h1>
            </div>
        </div>
    </div>
</div>

<div class="container py-3">
    <h2 class="titPage">Ordini Confermati</h2>
    <hr class="border border-danger border-2 opacity-50 mb-4" />

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="table-responsive">
        <table class="table table-warning table-striped">
            <thead>
                <tr>
                    <th>Nome Utente</th>
                    <th>Data Ordine</th>
                    <th>Stato Ordine</th>
                    <th>Totale</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Utenti.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataOrdine)</td>
                        <td>@Html.DisplayFor(modelItem => item.StatoOrdine)</td>
                        <td>@Html.DisplayFor(modelItem => item.Totale)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.OrdineID }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.OrdineID }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.OrdineID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
