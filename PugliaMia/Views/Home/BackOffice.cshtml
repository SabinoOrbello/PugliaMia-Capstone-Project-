

@{
    ViewBag.Title = "BackOffice";
}


<div class="container login-form my-4">
    <h2 class="titPage">BackOffice</h2>
    <hr class="border border-danger border-2 opacity-50 mb-4" />
    <div class="row g-4">
        <div class="col-3">
            <div class="card h-100 bgOffice text-center" style="width: 18rem;">
                <h5 class="card-title">Visualizza i Prodotti</h5>
                <img src="~/Content/Images/marmellata1.png" class="card-img-top" alt="...">
                <div class="card-body">

                    <p>@Html.ActionLink("Lista Prodotti", "IndexAdmin", "Prodotti", new { area = "" }, new { @class = "bottone1" })</p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card p-2 bgOffice1 text-center" style="width: 18rem;">
                <h5 class="card-title">Ordine Dettagli</h5>
                <img src="~/Content/Images/strascinati.png" class="card-img-top" alt="...">
                <div class="card-body">

                    <p> @Html.ActionLink("Dettaglio Ordine", "Index", "DettaglioOrdini", new { area = "" }, new { @class = "bottone1" })</p>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card p-2 bgOffice2 text-center" style="width: 18rem;">
                <h5 class="card-title">Ordini da Evadere</h5>
                <img src="~/Content/Images/taralli classic.png" class="card-img-top" alt="...">
                <div class="card-body">

                    <p> @Html.ActionLink("Ordini da Evadere", "OrdiniFinalizzati", "Ordini", new { area = "" }, new { @class = "bottone1" })</p>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card p-2 bgOffice3 text-center" style="width: 18rem;">
                <h5 class="card-title">Ordini Evasi</h5>
                <img src="~/Content/Images/olio olivò 5l.png" class="card-img-top" alt="...">
                <div class="card-body">

                    <p> @Html.ActionLink("Ordini Evasi", "OrdiniEvasi", "Ordini", new { area = "" }, new { @class = "bottone1" })</p>
                </div>
            </div>
        </div>
    </div>
</div>
